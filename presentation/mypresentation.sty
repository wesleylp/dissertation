\definecolor{smtshadred} {rgb}{0.40, 0.00, 0.00}
\definecolor{smtmidred}  {rgb}{0.55, 0.00, 0.00}
\definecolor{smtred}     {rgb}{0.70, 0.00, 0.00}

\setbeamercolor{title}{fg=smtred}

\setbeamercolor{frametitle}      {fg=white,bg=smtdarkred}
\setbeamercolor{frametitle right}{fg=white,bg=shadred}

\setbeamercolor{local structure}{fg=smtred}
\setbeamercolor{section in toc} {fg=blue}

\setbeamercolor{palette primary}   {fg=white,bg=smtblackred}
