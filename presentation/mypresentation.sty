\setbeamertemplate{enumerate subitem}[square]
\setbeamerfont{subitem projected}{size=\tiny}

%% Third level.
\setbeamertemplate{enumerate subsubitem}[circle]
\setbeamerfont{subsubitem projected}{size=\tiny}

